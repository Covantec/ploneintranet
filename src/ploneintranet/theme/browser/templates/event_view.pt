<html xmlns="http://www.w3.org/1999/xhtml"
    xml:lang="en"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    lang="en"
    metal:use-macro="context/main_template/macros/master"
    i18n:domain="ploneintranet.theme">

<body>

    <metal:content metal:fill-slot="content"
        tal:define="workspace view/workspace;
                    workspace_url python:workspace.absolute_url();
                    workspace_id python:workspace.id">

        <h1 id="workspace-name">
            <a href="${workspace_url}" tal:content="workspace/Title">Title</a>
        </h1>

        <div class="${workspace_id} dark-theme" id="application-body">

        <div id="document-body">
            <nav class="tabs document-tabs">
                <a data-pat-inject="source: #document-body; target: #document-body && source: .document-controls; target: .document-controls"
                    class="current pat-inject icon-calendar"
                    href="${context/absolute_url}/intranet_event_view#document-content">
                    Event details
                </a>
                <a data-pat-inject="source: #document-content .officePreview; target: #document-content && source: .document-controls; target: .document-controls"
                    class="pat-inject icon-document"
                    href="event-amb-fra-2011-boardbook.html#document-content">
                    Boardbook
                </a>
                <a class="pat-inject icon-document"
                    data-pat-inject="source: #document-content .officePreview; target: #document-content && source: .document-controls; target: .document-controls"
                    href="waste-not-want-not.html#document-content">
                    Waste not want not
                </a>
            </nav>
            <div id="document-content">
                <form action="" class="content-container" id="calendar-details" method="post" name="event_form">
                    <fieldset class="vertical">
                        <input class="title" name="title" placeholder="Event title" type="text" value="${context/title}">
                    </fieldset>
                    <fieldset class="vertical">
                        <textarea name="description" placeholder="Description">${context/description}</textarea>
                        <br>
                        <label>
                            Location <input name="location" type="text" value="${context/location}">
                        </label>
                        <br>
                        <label>
                            Called by <input class="pat-autosuggest users" data-pat-autosuggest="words: Bi Angli &lt;bi.angli@shenzenair.com&gt;, Edmund Hall &lt;edmund.hall@aircanada.com&gt;, Hanns-Martin Schulte &lt;hanns.martin.schulte@lufthansa.de&gt;, Helge Nørdal &lt;hnoerdal@sas.dk&gt;, John Doe &lt;john.doe@aircanada.com&gt;, Liz Baker &lt;liz.baker@united.com&gt;, Peter Meier &lt;peter.meier@swiss.com&gt;, Ratana Preecha &lt;ratana.preecha@thaiair.com&gt;" type="text" value="Mark Schwab">
                        </label>
                        <br>
                        <label>
                            Organiser <input class="pat-autosuggest users" data-pat-autosuggest="words: Bi Angli &lt;bi.angli@shenzenair.com&gt;, Edmund Hall &lt;edmund.hall@aircanada.com&gt;, Hanns-Martin Schulte &lt;hanns.martin.schulte@lufthansa.de&gt;, Helge Nørdal &lt;hnoerdal@sas.dk&gt;, John Doe &lt;john.doe@aircanada.com&gt;, Liz Baker &lt;liz.baker@united.com&gt;, Peter Meier &lt;peter.meier@swiss.com&gt;, Ratana Preecha &lt;ratana.preecha@thaiair.com&gt;" type="text" value="Janet Northcote &lt;janet.northcote@staralliance.com&gt;">
                        </label>
                        <br>
                        <fieldset class="pat-checklist">
                            <label>
                                <input tal:attributes="checked python:context.whole_day" type="checkbox"> All day event
                            </label>
                            <br>
                            <label>
                                <input checked type="checkbox"> Visible on other calendars
                            </label>
                        </fieldset>
                        <br>
                        <fieldset class="date-time">
                            <fieldset class="row">
                                <fieldset class="group six columns">
                                    <legend>From</legend>
                                    <input type="date" size="10" class="date" name="start-day" placeholder="Date" value="${context/start/date}" />
                                    <input type="time" size="10" class="date" name="start-time" placeholder="Time" value="${context/start/time}" />
                                </fieldset>
                                <fieldset class="group six columns">
                                    <legend>To</legend>
                                    <input type="date" size="10" class="date" name="end_date-day" placeholder="Date" value="${context/end/date}" />
                                    <input type="time" size="10" class="date" name="end_date-time" placeholder="Time" value="${context/end/time}" />
                                </fieldset>
                            </fieldset>
                            <label>Timezone <select class="timezone">
                                <option data-timezone-id="1" gmt-adjustment="GMT-12:00" data-use-daylight-time="0" value="-12">(GMT-12:00) International Date Line West</option>
                            </select> </label>
                        </fieldset>
                        <label>Invitees <input class="pat-autosuggest users"
                            data-pat-autosuggest=""
                            data-pat-autosuggest-classes='{"Brett Anderson &lt;brett.anderson@united.com&gt;": ["undecided"], "Steffen Harbarth &lt;steffen.harbarth@dlh.de&gt;": ["confirmed"], "Julie Pepiot &lt;julie.pepiot@swiss.com&gt;": ["tentative"], "Lillian Lautzenheiser-Page &lt;lillian.lautz-page@ual.com&gt;": ["declined"], "G7 &lt;g7@world.com&gt;": ["group"]}'>
                            <span class="legend">
                                <dfn class="undecided">Undecided</dfn>
                                <dfn class="confirmed">Confirmed</dfn>
                                <dfn class="tentative">Tentative</dfn>
                                <dfn class="declined">Declined</dfn>
                            </span>
                        </label>
                        <fieldset class="group pat-checklist radio">
                            <legend>
                                Event type
                            </legend>
                            <label>
                                <input name="meeting-type" type="radio"> Unspecified
                            </label>
                            <br>
                            <label>
                                <input name="meeting-type" type="radio"> Blackout day
                            </label>
                            <br>
                            <label>
                                <input checked name="meeting-type" type="radio"> Face to face
                            </label>
                            <br>
                            <label>
                                <input name="meeting-type" type="radio"> Conference call
                            </label>
                            <br>
                            <label>
                                <input name="meeting-type" type="radio"><input placeholder="Other" type="text">
                            </label>
                        </fieldset>
                        <label>Attached documents from this workspace
                            <input class="pat-autosuggest documents"
                                data-pat-autosuggest="words:2013 Outline,Bag tag regulations,Baggage rules,First delivery presentation,IATA standards 2012,Initial competitive analysis,Market segmentation,Minutes kick-off meeting,Out of the box,Priority bag process,Priority bag tag specification,Waste not want not" type="text" value="Boardbook, Waste not want not">
                        </label>
                    </fieldset>
                    <input name="redirect" type="hidden" value="/pview#document-body#buttons-contextual">
                    <input name="portal_type" type="hidden" value="VSEvent">
                    <input name="content_type" type="hidden" value="archetypes">
                </form>
            </div>
        </div>
        <aside class="sidebar left tagging-off" id="sidebar" data-tile="plone/new-workspace/@@sidebar.default" tal:define="container context/@@plone_context_state/folder" tal:attributes="data-tile string:${container/absolute_url}/@@sidebar.default">
        </aside>
        </div>
        <nav class="navigation workspace-tabs" id="workspace-tabs" data-tile="./@@workspace.tabs.tile" tal:attributes="data-tile string:${workspace_url}/@@workspace.tabs.tile" />
        </metal:content>
    </body>
</html>
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      lang="en"
      xml:lang="en"
      i18n:domain="ploneintranet"
>
  <body>
    <div id="document-content">
      <div class="pat-modal"
           tal:omit-tag="view/is_ajax"
      >
        <h1>${view/title}</h1>
        <form class="wizard-box pat-inject"
              action="${view/__name__}"
              method="post"
              data-pat-inject="#user-${python:here.UID()[:6]}::element &amp;&amp; #global-statusmessage; loading-class: ''"
        >
          <div class="panel-body">
            <tal:block tal:replace="structure context/@@authenticator/authenticator" />
            <input name="SearchableText"
                   type="hidden"
                   value="${request/SearchableText|nothing}"
            />
            <article>
              <p>${view/description}</p>
            </article>
          </div>
          <div class="buttons panel-footer">
            <button class="icon-ok-circle close-panel"
                    name="toggle_state"
                    type="submit"
                    value="1"
            >${view/title}</button>
            <button class="icon-cancel-circle close-panel"
                    type="button"
                    i18n:translate=""
            >Cancel</button>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>

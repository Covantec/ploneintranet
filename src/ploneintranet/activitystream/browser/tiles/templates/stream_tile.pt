<html>
    <body>
        <div id="activity-stream"
             class="activity-stream">

          <h2 tal:condition="view/tag" i18n:translate="">Updates tagged
          #<span tal:replace="view/tag" i18n:name="tag">sometag</span>
          </h2>
          <div class="activities" tal:define="
              stream_macros nocall:here/activity-stream.html|here/context/activity-stream.html;
              context_url here/absolute_url|here/context/absolute_url;
            ">
            <metal:block use-macro="stream_macros/main" />

            <a tal:condition="not:view/last_one" href="@@activitystream.tile?network=1&b_start=0" tal:attributes="href string:${context_url}/@@activitystream.tile?network=1&b_start=${view/b_next}" class="pat-inject infinite-scrolling-trigger" data-pat-inject="trigger: autoload-visible; source: .activities; target: self::element">Loading more postsâ€¦</a>
          </div>
        </div>
    </body>
</html>

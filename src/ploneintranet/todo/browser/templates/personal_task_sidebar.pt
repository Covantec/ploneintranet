<aside class="left sidebar"
       id="sidebar"
>
  <div class=""
       id="sidebar-content"
  >
    <nav class="navigation tabs pat-tabs">
      <a class="pat-inject ${item/klass|nothing}"
         href="${item/url}"
         data-pat-inject="target: #sidebar-content &gt; .tabs-content; source: #sidebar-content &gt; .tabs-content; history: record"
         tal:repeat="item view/navigation_tabs"
      >${item/label}</a>
    </nav>
    <div class="tabs-content">
      <form class="pat-inject pat-autosubmit"
            action="search-result.html#search-result"
      >
        <div class="button-bar functions"
             id="-functions"
        >
          <div class="contextual buttons float-before"
               id="-contextual-functions"
          >
            <label class="pat-select bare"
                   data-option="Group by origin"
            >
              <select name="browse-mode">
                <option value="case_state">Group by origin</option>
                <option value="case_state">Group by origin and milestone</option>
                <option value="initiator">Group by initiator</option>
                <option value="task_state">Group by task state</option>
                <option value="priority">Group by priority</option>
                <option value="none">No grouping</option>
              </select>
            </label>
            <div class="extras">
              <label class="pat-select bare"
                     data-option="newest first"
              >Sort
                <select name="browse-mode">
                  <option value="sort">newest first</option>
                  <option value="sort">oldest first</option>
                  <option value="sort">by assignee</option>
                  <option value="sort">by initiator</option>
                  <option value="sort">by task state</option>
                  <option value="sort">by priority</option>
                  <option value="sort">alphabetically</option>
                </select>
              </label>
              <label class="pat-select bare"
                     data-option="Open tickets"
              >
                <select name="browse-mode">
                  <option value="task_state">Open tickets</option>
                  <option value="task_state">Closed tickets</option>
                  <option value="task_state">All tickets</option>
                </select>
              </label>
              <div class="pat-collapsible context-menu closed align-left"
                   id="initiators-menu"
                   data-pat-collapsible="close-trigger: .context-menu:not(#initiators-menu),.close-menu"
              >
                <strong class="label menu-trigger collapsible-closed">Initiators</strong>
                <div class="panel-content"
                     style="display: none;"
                ><p class="close-menu">Close</p><fieldset class="pat-checklist unchecked">
                    <label class="unchecked"><input name=""
                             type="checkbox"
                      />
                        I
                    </label>
                  </fieldset><fieldset class="pat-checklist unchecked">
                    <label class="unchecked"><input name=""
                             type="checkbox"
                      />
                        John Doe
                    </label>
                    <label class="unchecked"><input name=""
                             type="checkbox"
                      />
                        Mario Minstreel
                    </label>
                    <label class="unchecked"><input name=""
                             type="checkbox"
                      />
                        Guido Stevens
                    </label>
                  </fieldset></div>


              </div>
              <div class="pat-collapsible context-menu closed align-left"
                   id="date-range-menu"
                   data-pat-collapsible="close-trigger: .context-menu:not(#date-range-menu),.close-menu"
              >
                <strong class="label menu-trigger collapsible-closed">Date range</strong>
                <div class="panel-content"
                     style="display: none;"
                ><p class="close-menu">Close</p><fieldset class="vertical">
                    <label>
                                  From
                      <input class="pat-date-picker"
                             name="filter-from-date"
                             type="text"
                      />
                    </label>
                    <label>
                                  Until
                      <input class="pat-date-picker"
                             name="filter-until-date"
                             type="text"
                      />
                    </label>
                  </fieldset></div>

              </div>
              <div class="pat-collapsible context-menu closed align-left"
                   id="milestones-menu"
                   data-pat-collapsible="close-trigger: .context-menu:not(#milestones-menu),.close-menu"
              >
                <strong class="label menu-trigger collapsible-closed">Milestones</strong>
                <div class="panel-content"
                     style="display: none;"
                ><p class="close-menu">Close</p><fieldset class="pat-checklist unchecked">
                    <label class="unchecked"><input name=""
                             type="checkbox"
                      />
                        Neu
                    </label>
                    <label class="unchecked"><input name=""
                             type="checkbox"
                      />
                        In bearbeitung
                    </label>
                    <label class="unchecked"><input name=""
                             type="checkbox"
                      />
                        Vollst&auml;ndig
                    </label>
                    <label class="unchecked"><input name=""
                             type="checkbox"
                      />
                        Antrag
                    </label>
                    <label class="unchecked"><input name=""
                             type="checkbox"
                      />
                        Beschlossen
                    </label>
                    <label class="unchecked"><input name=""
                             type="checkbox"
                      />

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="ploneintranet">
  <body>

	<div id="content">
      <div id="contact-search-items" tal:define="search_response context/@@search_people/search_people">
        <nav class="user-cloud pat-auto-scale" tal:condition="not:request/SearchableText|nothing">
            <a href="${user/absolute_url}" data-initials="${python:user.first_name[:1] + user.last_name[:2]}" title="${user/title}" class="pat-avatar" tal:repeat="user view/recent_contacts">
                            <img src="${user/absolute_url}/@@avatar_profile.jpg" alt="" />
                    </a>
        </nav>
        <div class="item-selector mode-follow"
             tal:condition="request/SearchableText|nothing">
          <form class="search-result users">
            <fieldset class="checklist pat-checklist">
              <tal:result repeat="result search_response">
                <label class="item user">
                  <input name="" type="checkbox" />
                  <a href="${result/url}" class="follow">
                    <img src="${result/preview_image_path}" alt="" class="avatar" />
                    <strong class="title">${result/title}</strong>
                    <br/>
                    <dfn class="byline" tal:content="python: True and result.contact_telephone or '&nbsp;'"/>
                  </a>
                </label>
              </tal:result>
            </fieldset>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
